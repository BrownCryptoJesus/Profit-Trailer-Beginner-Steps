#MONIM ANDERSON DOUBLE DCA#
#For the settings below max cost allows you to designate max price for each DCA trigger
#max buy times determines how many triggers the bot will perform#

enabled = true
max_cost = 0
max_buy_times = 3 
min_buy_balance_percentage = 20
min_buy_volume = 100

#==============================#
#BUY SETTINGS #

# TO DOLLAR COST AVERAGE IS TO SAY I WILL TAKE 1000$ AND REINVEST IT EVERY 7 DAYS NO MATTER WAHT THE MARKET CONDITION THIS MEANS THAT I WILL HAVE BOUGHT LESS SHARES AT HIGH PRICES AND MORE SHARES AT LOW PRICES
#THE SAME APPLY'S HERE BUT INSTEAD WE ARE DOUBLING UP ON OUR POSITIONS SO EVEN A SMALL UPTURN AFTER DOUBLING DOWN IS MAGNIFIED#

buy_strategy = ANDERSON
buy_style = DOUBLEDOWN

buy_trigger_1 = -3.5
buy_trigger_2 = -5.5
buy_trigger_3 = -7.5
buy_trigger_4 = -9.5
buy_trigger_5 = -12.5

#The very essence of this bot is its ability--#
#--to trail the prices as they chart down or up the value determines what range to trail at.#


trailing_buy = 0.0777


pending_order_wait_time = 0
ignore_sell_only_mode = true



#SELL STRATEGY#
sell_strategy = GAIN
sell_value = .86
trailing_profit = 0.25
#--------------------------------------------------------------#

#SAFTEY SETTINGS#
# max spread % between lowest ask and highest bid  to allow a new buy order
# if spread is too big, most likely there was a coin dump/pump and you are buying too high
